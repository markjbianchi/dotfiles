" Normal vim options -----------------------------------------------------
set smartindent         " indents after <RETURN> appropriately
set autoindent
set ignorecase          " case insensitive search
set smartcase           " search string determines case matching
set incsearch           " incremental search
set nohlsearch          " turn off highlight search results
"set number              " absolute line numbers
set scrolloff=3         " keep 3 lines above/below the cursor when scrolling
set softtabstop=4
set tabstop=4
set expandtab           " turn tabs into spaces (use <C-V>Tab to insert real tabs
set shiftround          " round indent to multiple of shiftwidth
set shiftwidth=4
set clipboard+=unnamed,unnamedplus
set wrapscan            " search wraps around EOF

" Vrapper options --------------------------------------------------------
"set contentassistmode
set gvimpath=/usr/local/bin
set startnormalmode
set novisualmouse

" Custom commands --------------------------------------------------------
command Retab retab!

" Mappings ---------------------------------------------------------------
" Toggles highlighting of search
noremap \<SPACE> :set hlsearch!<RETURN>
" Ctrl-l to turn off higlighting and repaint
noremap <C-L> :nohlsearch<RETURN><C-L>
" Keep searching in the middle of the window
nnoremap n nzzzv
nnoremap N Nzzzv

" Toggle [N]on-printable characters
nnoremap \N :set list!<RETURN>

inoremap jk <ESC>

" Make Y and D behanve like other capital commands
noremap Y y$
noremap D d$

" Split line (sister to [J]oin lines)
" The normal use of S is covered by cc, so don't worry about shadowing it.
nnoremap S i<RETURN><ESC>^mwgk:silent! s/\v +$//<RETURN>:noh<RETURN>`w

" Make movement to beginning/endo of line easier
nnoremap H ^
nnoremap L $
vnoremap L g_

" Use ; for : in normal and visual mode, less keystrokes
nnoremap ; :
vnoremap ; :

" Swap implementations of ` and ' jump-to markers
" By default, ' jumps to the marked line, ` jumps to the mark line and column
nnoremap ' `
nnoremap ` '

" Select entire buffer (like Ctrl-A)
nnoremap vy ggVG

" Underline a line with hyphens
noremap \- yypVr-
" Underline a line with equals
noremap \= yypVr=

" Surround word with " or '
nnoremap \" viw<ESC>a"<ESC>hbi"<ESC>lel
nnoremap \' viw<ESC>a'<ESC>hbi'<ESC>lel

" Use <tab> to indent in visual mode
vnoremap <Tab> >'<0v'>$
vnoremap <S-Tab> <'<0v'>$

" Break a comma-delimited list onto new lines
vnoremap \, :s/,/,\r/g<RETURN>

" split window horizontally or veritcally *and* switch to the new split
""nnoremap \hs :split<BAR><C-W> j<RETURN>
""nnoremap \vs :vsplit<BAR><C-W> l<RETURN>
" close the current window
""nnoremap \sc :close<RETURN>

" navigate splits with g command prepended to the analogous vim motion
""nnoremap gh <C-W> h<RETURN>
""nnoremap gj <C-W> j<RETURN>
""nnoremap gk <C-W> k<RETURN>
""nnoremap gl <C-W> l<RETURN>

" go to previous, top left, bottom right window; cycle through windows
""nnoremap gp <C-W> p<RETURN>
""nnoremap gt <C-W> t<RETURN>
""nnoremap gb <C-W> b<RETURN>
""nnoremap gw <C-W> w<RETURN>

" equal size windows
""nnoremap g= <C-W> =<RETURN>

